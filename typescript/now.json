{
  "version": 2,
  "builds": [
    {
      "src": "./src/**/*.ts",
      "use": "@now/node@canary"
    },
    {
      "src": "./src/static/*",
      "use": "@now/static"
    }
  ],
  "env": {
    "IS_NOW": "true"
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/src/backend/$1" },
    { "src": "/sushi/(.*)", "dest": "/src/frontend/sushi?type=$1" },
    { "src": "/(.*)", "dest": "/src/frontend/$1" },
    { "src": "/static/(.*)", "dest": "/src/static/$1" }
  ]
}
